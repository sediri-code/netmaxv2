---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getEntryBySlug } from "astro:content";

import { createOrder } from "../lib/supa";

const entry = await getEntryBySlug("pages", "contact");
const { contact_form_action }: { contact_form_action: string } = config.params;
const { title, description, meta_title, image } = entry.data;

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const order = {
      name: data.get("name"),
      phone: data.get("phone"),
      account_link: data.get("account_link"),
      promo_code: data.get("promo_code"),
      quantity: data.get("quantity"),
      price: data.get("price")?.split(" ")[0],
    };
    console.log("order", order);
    const response = await createOrder(order);
    console.log("res", response);
    // Do something with the data
  } catch (error) {
    console.error(error);
  }
}
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={title} />
  <section class="section-sm">
    <div class="container">
      <div class="row">
        <div class="mx-auto md:col-10 lg:col-6">
          <form method="POST">
            <div class="mb-6">
              <label for="name" class="form-label">
                Nom et Prénom <span class="text-red-500">*</span>
              </label>
              <input
                id="name"
                name="name"
                class="form-input"
                placeholder="Saisir votre nom"
                type="text"
              />
            </div>
            <div class="mb-6">
              <label for="phone" class="form-label">
                Numéro de Téléphone <span class="text-red-500">*</span>
              </label>
              <input
                id="phone"
                class="form-input"
                name="phone"
                placeholder="Saisir votre numéro de téléphone"
                type="tel"
              />
            </div>

            <div class="mb-6">
              <label for="instagram" class="form-label">
                Lien Instagram<span class="text-red-500">*</span>
              </label>
              <input
                id="instagram"
                class="form-input"
                name="account_link"
                placeholder="Saisir votre lien Instagram (Il doit être publique)"
                type="text"
              />
            </div>

            <div class="mb-6">
              <label for="CODE" class="form-label"> Code PROMO</label>
              <input
                id="CODE"
                class="form-input"
                name="promo_code"
                placeholder="Saisir un Code PROMO"
                type="text"
              />
            </div>

            <div class="mb-6">
              <label for="followers" class="form-label">
                Nombre d'abonnés <span class="text-red-500">*</span>
              </label>
              <input
                id="followers"
                class="form-input"
                placeholder="Saisir le nombre d'abonnés"
                type="number"
                min="1000"
                name="quantity"
              />
            </div>

            <div class="mb-6">
              <label for="price" class="form-label"> Prix</label>
              <input
                id="price"
                class="form-input"
                placeholder="Montant à payer"
                type="text"
                readonly
                name="price"
              />
            </div>

            <script>
              const followersInput = document.getElementById("followers");
              const priceInput = document.getElementById("price");

              followersInput.addEventListener("input", function () {
                const followersCount = parseInt(followersInput.value);
                const price = followersCount * 0.004;
                priceInput.value = price.toFixed(3) + " TND";
              });
            </script>

            <button type="submit" class="btn btn-primary"
              >Passez votre commande</button
            >
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>
